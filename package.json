{
  "name": "hello-parcel-app",
  "version": "0.1.0",
  "description": "My First Parcel App",
  "source": "src/index.html",
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "scripts": {
    "npm:install:global": "npm install --location=global yarn open-cli",
    "setup": "npm run npm:install:global",
    "standard": "standard --fix src/**/*.js",
    "lint:js": "npm run standard",
    "lint": "npm run lint:js",
    "preparcel": "npm run lint",
    "parcel": "parcel",
    "parcel:build": "npm run parcel -- build",
    "test": "exit 0",
    "dist": "npm run parcel:build",
    "browser": "open-cli http://localhost:1234",
    "start": "npm run parcel"  
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/percebus/hello-parcel-app.git"
  },
  "keywords": [
    "parcel",
    "html",
    "hello-world"
  ],
  "author": "percebus",
  "license": "SEE LICENSE IN LICENSE.md",
  "bugs": {
    "url": "https://github.com/percebus/hello-parcel-app/issues"
  },
  "homepage": "https://github.com/percebus/hello-parcel-app#readme",
  "devDependencies": {
    "parcel": "latest",
    "standard": "latest"
  }
}
